{# Base template for the layouts (front-page, default) #}
<!DOCTYPE html>
<html lang="en-US" dir="ltr" class="no-js light">
    {% include "head.njk" %}
    <body class="{{ layout }}">
      {% include "header.njk" %}
      <div class="container">
        {% include "nav.njk" %}
        <div id="swup">
          {# This renders the actual content of the layout #}
          {% block content %}{% endblock %}
        </div>
      </div>
      {% include "scripts.njk" %}
    </body>
</html>
